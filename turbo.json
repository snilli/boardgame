{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**"],
			"env": ["NODE_ENV", "NEXT_PUBLIC_*"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"start": {
			"cache": false
		},
		"lint": {
			"dependsOn": ["^build"],
			"outputs": []
		},
		"typecheck": {
			"dependsOn": ["^build"],
			"outputs": []
		},
		"test": {
			"dependsOn": ["^build"],
			"outputs": []
		},
		"clean": {
			"cache": false
		}
	}
}